@using DAL.Models
@using WishList.ViewModels
@model GiftViewModel

@{
    ViewBag.Title = "ViewGift";
}

<h2>ViewGift</h2>
<div id="gift">
    <fieldset>
        <legend>GiftViewModel</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="display-label">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
        </div>

        <div class="display-label">
            @Html.LabelFor(model => model.Logo, new { @class = "col-md-2 control-label" })
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Logo, new { @class = "form-control" })
        </div>

        <div class="display-label">
            @Html.LabelFor(model => model.About, new { @class = "col-md-2 control-label" })
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.About, new { @class = "form-control" })
        </div>

        <div class="display-label">
            @Html.LabelFor(model => model.LikesCount, new { @class = "col-md-2 control-label" })
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.LikesCount, new { @class = "form-control" })
        </div>

    </fieldset>

    <p>
        @Ajax.ActionLink("Edit", "UpdateGift", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "gift" })
        @Html.ActionLink("Back to List", "Index")
    </p>

    @Html.ActionLink("Add to my wish list", "AddGiftToWishList", "WishList", new { giftId = Model.Id}, null)
</div>