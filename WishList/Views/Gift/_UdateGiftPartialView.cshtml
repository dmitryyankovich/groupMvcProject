@model WishList.ViewModels.GiftViewModel

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div id="gift">
    @using (Ajax.BeginForm("UpdateGift", new AjaxOptions { UpdateTargetId = "gift" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Logo, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Logo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Logo)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.About, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.About, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.About)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary createButton" value="Save" />
                </div>
            </div>
    }

    <div>
        @Html.ActionLink("Go to catalog", "Catalog")
    </div>
</div>