@model WishList.ViewModels.GiftViewModel

<div id="gift">
    @using (Ajax.BeginForm("UpdateGift", null,new AjaxOptions { UpdateTargetId = "gift" }, new {@class="form-horizontal"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id)
        
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Logo, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Logo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Logo)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.About, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.About, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.About)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary createButton" value="Save" />
                </div>
            </div>
    }

    <div>
        @Html.ActionLink("Go to catalog", "Catalog")
    </div>
</div>