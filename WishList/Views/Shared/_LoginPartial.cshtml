@if (Request.IsAuthenticated)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink(User.Identity.Name, "ManageAccount", "User")</li>
            <li>@Html.ActionLink("Log off", "LogOff", "User")</li>
        </ul>
    </li>
        
}
else
{
        <li>@Html.ActionLink("Sign Up", "Registration", "User")</li>
        <li>@Html.ActionLink("Sign In", "Login", "User")</li>
}