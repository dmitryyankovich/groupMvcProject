@{
    Layout = null;
    ViewBag.Title = "Page Not Found";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/screen.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body id="e404">
    <div id="root">
        <div id="content">
            <div class="outer">
                <div id="error">
                    <h2>Something gone wrong ...</h2>
                    @Html.ActionLink("Go home", "Index", "Home", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</body>
</html>