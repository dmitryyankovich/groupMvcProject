@model IEnumerable<WishList.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Birthday</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.FormattedBirthday</td>
                    <td>@Html.ActionLink("Delete","DeleteUSer",null,new {@class = "btn btn-danger custom-button"})</td>
                    @*<td>@Html.DropDownListFor(m => item.RoleId, )</td>*@
                    <td>@Html.DropDownList("s",item.Roles)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
